// part: metadata

[setup]
drop = "test_time"

[tags]
sql-type-name = "TIME"

// part: setup_query

CREATE TABLE test_time (
    idx INT,
    res TIME(6)
);

// part: bind_query

INSERT INTO test_time VALUES ($1, $2)

// part: bind_schema

{
    "format": "+s",
    "children": [
        {
            "name": "idx",
            "format": "i",
            "flags": ["nullable"]
        },
        {
            "name": "res",
            "format": "ttu",
            "flags": ["nullable"]
        }
    ]
}

// part: bind

{"idx": 0, "res": 0}
{"idx": 1, "res": null}
{"idx": 2, "res": 49531123456}
{"idx": 3, "res": 45045500000}
{"idx": 4, "res": 86399999999}

// part: query

SELECT res FROM test_time ORDER BY idx

// part: expected_schema

{
    "format": "+s",
    "children": [
        {
            "name": "res",
            "format": "ttu",
            "flags": ["nullable"]
        }
    ]
}

// part: expected

{"res": 0}
{"res": null}
{"res": 49531123456}
{"res": 45045500000}
{"res": 86399999999}
