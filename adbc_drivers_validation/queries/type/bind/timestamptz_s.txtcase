// part: setup_query

CREATE TABLE test_timestamptz (
    idx INT,
    res TIMESTAMP(0) WITH TIME ZONE,
    res2 TIMESTAMP(0) WITH TIME ZONE
);

// part: bind_query

INSERT INTO test_timestamptz VALUES ($1, $2, $3)

